<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:res="clr-namespace:AppMovilProyecto1.Localization"
               x:Class="AppMovilProyecto1.MenuDesplegablePopup1">
    <Border
        StrokeShape="RoundRectangle 10"
        Stroke="{DynamicResource Gray}"
        BackgroundColor="{DynamicResource White}"
        Padding="5"
        Margin="10"
        >
        <StackLayout BackgroundColor="{DynamicResource White}" Padding="5">
            <Button Text="{x:Static res:AppResources.Delete}" Command="{Binding EliminarCommand}" Style="{StaticResource OpcionesBtnStyle}" />
        </StackLayout>
    </Border>
</toolkit:Popup>


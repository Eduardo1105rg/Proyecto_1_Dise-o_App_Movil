<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="AppMovilProyecto1.CurrencyPickerPopup">



    <StackLayout Style="{StaticResource contenedorPopup}">
        <!--Padding="20" BackgroundColor="White"-->
        
        <Label Text="Seleccionar una divisa base:" FontSize="Medium" TextColor="{DynamicResource PrimaryTextColor}" Margin="5" />
        <Border Style="{StaticResource contenedorPikerPopup}">
            <Picker x:Name="CurrencyPicker" WidthRequest="150" SelectedIndexChanged="CambiarOpcionSeleccionada">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">

                        <x:String>CRC</x:String>

                        <x:String>EUR</x:String>

                        <x:String>JPY</x:String>

                        <x:String>USD</x:String>
                  
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </Border>
        
    </StackLayout>
</toolkit:Popup>


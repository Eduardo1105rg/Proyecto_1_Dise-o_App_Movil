<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="AppMovilProyecto1.CurrencyPickerPopup">



    <StackLayout Padding="20" BackgroundColor="White">
        <!--Padding="20" BackgroundColor="White"-->
        
        <Label Text="Seleccionar una divisa base:" FontSize="Medium" TextColor="{DynamicResource PrimaryTextColor}" Margin="5" />

        <Picker x:Name="CurrencyPicker" WidthRequest="150" SelectedIndexChanged="CambiarOpcionSeleccionada" BackgroundColor="Green" Margin="5"/>

    </StackLayout>
</toolkit:Popup>


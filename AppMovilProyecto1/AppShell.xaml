<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppMovilProyecto1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppMovilProyecto1"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Shell.FlyoutBehavior="Flyout"
    Title="Serafino Exchange">

    <ShellContent
        Title="Inicio"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent Title="Conversor"
        ContentTemplate="{DataTemplate local:VentanaConversor}"
        Route="VentanaConversor"/>
    
    <ShellContent Title="Favoritos"
        ContentTemplate="{DataTemplate local:VentanaFavoritos}"
        Route="VentanaFavoritos"/>


    <Shell.ToolbarItems>

        <ToolbarItem Text="Divisa base"  x:Name = "ToollPikerItem" Order="Primary" Priority="0" Clicked="SeleccionarDivisaBaseRediReccionador"/>

    </Shell.ToolbarItems>
    
</Shell>
